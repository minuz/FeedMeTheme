<!-- START SHARE-->
<section id="share" class="border bottom clearfix">
	<div class="facebook">
		<div class="fb-like" data-send="false" data-layout="button_count" data-width="150" data-show-faces="false"></div>
	</div>
	<div class="twitter">
		<a href="//twitter.com/share" class="twitter-share-button" {% if settings.twitter_username != blank %}data-via="{{ settings.twitter_username | remove: '@' }}"{% endif %}>Tweet</a>
		<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
	</div>
	<div class="pinterest">
		{% assign product = collections[settings.featured_product].products.first %}
		{% if template == 'article' %}
		<a href="//pinterest.com/pin/create/button/?url={{ shop.url }}/{{ article.url}}&media={% if settings.use_logo == true %}{{ 'logo.png' | asset_url }}{% else %}{{ product.featured_image | product_img_url: 'medium' }}{% endif %}&description={{ article.title }}" class="pin-it-button" count-layout="none">Pin It</a>
		{% else %}
		<a href="//pinterest.com/pin/create/button/?url={{ shop.url }}&media={{ product.featured_image | product_img_url: 'large' | split:'?' | first  }}&description={{ product.title | escape | replace:' ','%20' }}" class="pin-it-button" count-layout="none">Pin It</a>
		{% endif %}
		<script src="//assets.pinterest.com/js/pinit.js"></script>
	</div>
</section>
<!-- END SHARE-->